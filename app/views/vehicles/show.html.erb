<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @vehicle.name %>
</p>

<p>
  <strong>Price:</strong>
  <%= @vehicle.price %>
</p>

<p>
  <strong>Category:</strong>
  <%= @vehicle.category_id %>
</p>
<%= like(@vehicle) %>

<p><%= @vehicle.votes.count %> <%= (@vehicle.votes.count) <= 1 ? "Vote" : "Votes" %></p>
<% if current_user.id == @vehicle.user_id %>
<%= link_to "Edit", edit_vehicle_path(@vehicle) %> |
<%= link_to "Back", vehicles_path %>
<% else %>
<%= link_to "Back", vehicles_path %>
<% end %>

